@model string

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">


    <meta name="viewport" content="width=device-width" />
    <title>Set Your Location | M.A.D.D</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/brands.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/solid.min.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" type="text/css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Rubik&display=swap" rel="stylesheet">
    <script src="~/js/JavaScript.js"></script>
    <link href="~/css/madd.css" type="text/css" rel="stylesheet" />
    <link href="~/css/snow.css" type="text/css" rel="stylesheet" />
    <script src="~/lib/upload.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <style type="text/css">

        body {
            left: 50%;
            top: 50%;
            margin-left: -20%;
            position: absolute;
            margin-top: -10%;
        }

        #logo {
            position: absolute;
            top: 20%;
            margin-left: 5%;
            width: 200px;
            height: 200px;
            margin-top: -90%;
        }
    </style>
</head>
<body>

    <div>
        <div class="container">
            <img id="logo" src="~/theme/IntelliGuardLogo.jpg">
            <form asp-controller="Face" asp-action="SelectLocation" method="post" class="form-horizontal" role="form">
                <div class="form-horizontal">
                    <div class="form-group row">
                        <label name="Location" class="control-label col-sm-3">Location:</label>
                        <div class="col-sm-10">
                            <div>
                                <select id="Location" class="form-control  form-control-lg" name="Location">


                                    <option value="">-- SELECT --</option>
                                    <option value="north_agora">North Agora</option>
                                    <option value="south_agora">South Agora</option>


                                </select>
                            </div>

                        </div>
                    </div>



                    <div class="form-group row">
                        <div class="offset-sm-2 col-10">
                            <input type="submit" value="Set" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>





