
@model MaddUser;
<!DOCTYPE html>
<html>
<head>
    <title>
        MOBILE SIGNUP PAGE
    </title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/uploaduser.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/uploaduser.js"></script>
   

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <style>
        body {
            background-color: lightblue;
        }

        .box {
            width: 50%;
            margin: auto;
            padding-top: 20px;
        }

            .box h1 {
                text-align: center;
                font-weight: bold;
                text-transform: uppercase;
                color: tomato;
            }

                .box h1 span {
                    font-weight: lighter;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="box">
                <h1>Registration</h1>
                <form asp-controller="MaddUser" asp-action=" MobileSignUp" method="post">
                    <!-- name field -->
                    <div class="form-group">

                        <label asp-for="UserName" class="sr-only">Name</label>
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Name">
                        </div>
                    </div>
                    <!--Password-->
                    <div class="form-group">
                        <label asp-for=" UserPw" class="sr-only" type="password">Pasword</label>
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                            <input asp-for="UserPw" type="text" class="form-control" placeholder="Password">
                        </div>
                    </div>

                    <!-- phone field -->
                    <div class="form-group">
                        <label asp-for="UserContact" class="sr-only">Phone</label>
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></div>
                            <input class="form-control" asp-for="UserContact" placeholder="PhoneNumber">
                        </div>
                    </div>
                    <div>
                        <div id="vid-controls">
                            <video id="vid-show" autoplay width="320" height="240"></video>
                            <div class="row">
                                <!--
       <input id="vid-take" type="button" value="Submit" class="btn btn-primary" />
    -->
                               
                                <button id="vid-take" type="submit" class="btn btn-default">Submit</button>
                            </div>

                            <div id="vid-canvas"></div>
                        </div>
                    </div>
                </form>
              

            </div>
        </div>
    </div>
</body>
</html>